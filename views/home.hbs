{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{removedUser}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6"><h2>List of Users</h2></div>
  <div class="col-6 d-flex justify-content-end">
    <div class="col-3 d-flex justify-content-end">
      <a href="/adduser" type="button" class="btn btn-primary align-self-center"><i class="bi bi-person-plus"> add user</i></a>
    </div>
    <div class="col-3 d-flex justify-content-center">
      <a href="/" type="button" class="btn btn-secondary align-self-center"><i class="bi bi-arrow-clockwise"> Refresh</i></a>
    </div>
  </div>
</div>

<table class="table table-striped table-hover table-bordered">
  <caption>List of users</caption>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone number</th>
      <th scope="col">Comments</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr >
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone_number}}</td>
      <td>{{this.comments}}</td>
      <td class="text-end">
          <a href="/viewuser/{{this.id}}" type="button" class="btn btn-primary btn-sm"><i class="bi bi-eye"> View</i></a>
          <a href="/edituser/{{this.id}}" type="button" class="btn btn-secondary btn-sm"><i class="bi bi-pencil"> Edit</i></a>
          <a href="/{{this.id}}" type="button" class="btn btn-danger btn-sm"><i class="bi bi-person-x"> Delete</i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>